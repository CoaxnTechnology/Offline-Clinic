# Production Environment Variables Template
# Copy this to .env and fill in your values

# Secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_very_long_random_secret_key_here_change_in_production

# Database (PostgreSQL)
# For production, use your cloud database URL
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Redis (for Celery and SocketIO)
# For production, use your cloud Redis URL
REDIS_URL=redis://localhost:6379/0

# File storage paths (relative to project root or absolute)
DICOM_STORAGE_PATH=dicom_files
THUMBNAIL_STORAGE_PATH=thumbnails
PDF_REPORTS_PATH=reports

# Flask environment
FLASK_ENV=production

# DICOM Server Configuration
DICOM_MWL_PORT=11112
DICOM_STORAGE_PORT=11113
DICOM_AE_TITLE=STORESCP

# Logging
LOG_LEVEL=INFO

# Server Configuration (for cloud platforms)
PORT=5000
WEB_CONCURRENCY=4
